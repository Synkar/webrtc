#!/bin/bash
set -e
run_updates=0
rootdir="$(cd "$(dirname "$0")"; pwd)"
if [ ! -d "$rootdir/depot_tools" ]
then
	cd "$rootdir"
	# depot_tools modified to support python 3.8
	git clone https://github.com/Synkar/depot_tools.git
elif [ "$run_updates" -eq 1 ]
then
	git -C "$rootdir/depot_tools" pull
fi

